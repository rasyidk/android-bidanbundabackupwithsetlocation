<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@color/colorAccent"
    card_view:cardCornerRadius="10dp"
    tools:context=".bottomnavigation.videomateri.nav_videomateri">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <ImageView
            android:id="@+id/pus_img_pus"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/pus"
            android:scaleType="centerCrop" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:background="@drawable/pus_custom_gradient"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp"
            android:layout_gravity="bottom">
            <TextView
                android:id="@+id/pus_tv_nmpuskesmas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Puskesmas 1"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:fontFamily="@font/raleway_bold"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/pus_tv_alamat_pus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ALAMAR"
                    android:layout_toLeftOf="@id/pus_row_bt_daftar"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/raleway"/>

                <Button
                    android:id="@+id/pus_row_bt_daftar"
                    android:layout_width="70dp"
                    android:text="Daftar"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:fontFamily="@font/raleway_semibold"
                    android:layout_centerVertical="true"
                    android:padding="0dp"
                    android:background="@drawable/activity_inpus_button_search"
                    android:layout_alignParentRight="true"
                    android:layout_height="20dp"/>

            </RelativeLayout>


        </LinearLayout>
    </FrameLayout>
</androidx.cardview.widget.CardView>